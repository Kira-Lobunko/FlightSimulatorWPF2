<Window x:Class="FlightSimulatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorWPF"
        mc:Ignorable="d"
        Title="Главное Меню" Height="324" Width="300" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid Background="#FFC692D2">
        <Button x:Name="StartButton" Content="Новая симуляция" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Height="30" Width="228" Click="StartButton_Click" Background="#FFF35D34"/>
        <Button x:Name="LoadButton" Content="Продолжить симуляцию" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="228" Click="LoadButton_Click" Background="#FFF3662D"/>
        <Button x:Name="ControlButton" Content="Справочник" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="228" Margin="0,222,0,0" Click="ControlButton_Click" Background="#FFED6626"/>

    </Grid>
</Window>
